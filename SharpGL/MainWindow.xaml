<Window x:Class="SharpGL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpGL"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366" Loaded="Window_Loaded">
    <!--<Grid>
        <sharpGL:OpenGLControl OpenGLDraw="OpenGLControl_OpenGLDraw" />
    </Grid>-->
    <Grid>
        <Border x:Name="CanvasBorder" BorderBrush="Black" Width="255" Height="405">
            <Canvas Width="255" Height="405">
                <Image Name="Head"></Image>
                <Image Name="UpperClothes"></Image>
                <Image Name="UpperMannequin"></Image>
                <Image Name="LowerClothes"></Image>
                <Image Name="LowerMannequin"></Image>
            </Canvas>
        </Border>
    </Grid>
</Window>
